<div class="flex items-start p-4 mt-4 border rounded">
  <div class="flex-1 pl-4 flex items-start justify-between">
    <div class="leading-normal">
      <p class="text-gray-700 text-xs"><%= comment.user.username %> commented <%= time_ago_in_words(comment.created_at) %> ago</p>
      <div class="text-gray-700"><%= sanitize comment.reply %></div>
    </div>

    <% if author_of(comment) %>
      <%= link_to "Delete", ticket_comment_path(comment.ticket, comment), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-destroy" %>
    <% end %>
  </div>
</div>